<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@color/backroundLinear1"
            >

            <TextView
                android:id="@+id/tv_number_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="@font/inter"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"/>

            <View
                android:id="@+id/view1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_number_player"
                android:background="@color/white"
                android:layout_marginStart="20.3dp"
                />


            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Azamat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
               />

            <View
                android:id="@+id/view2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_player_name"
               android:layout_marginStart="17.5dp"
                />

            <TextView
                android:id="@+id/tv_player_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view2"
                android:layout_marginTop="14dp"
                android:layout_marginStart="10dp"/>

            <View
                android:id="@+id/view3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_player_age"
                android:layout_marginStart="10.4dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/const1"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@color/backroundLinear2"
            >

            <TextView
                android:id="@+id/tv_number_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="@font/inter"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"/>

            <View
                android:id="@+id/view11"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_number_player2"
                android:background="@color/white"
                android:layout_marginStart="21.3dp"
                />


            <TextView
                android:id="@+id/tv_player_name2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Azamat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view11"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                />

            <View
                android:id="@+id/view22"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_player_name2"
                android:layout_marginStart="17.5dp"
                />

            <TextView
                android:id="@+id/tv_player_age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view22"
                android:layout_marginTop="14dp"
                android:layout_marginStart="10dp"/>

            <View
                android:id="@+id/view33"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_player_age2"
                android:layout_marginStart="10.4dp"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>